@model ToDoApplication.Models.Todo

@{
    ViewData["Title"] = "Todo löschen";
}

<h2>@ViewData["Title"]</h2>

<h3>Möchten Sie dieses Todo wirklich löschen?</h3>
<div>
    <h4>Todo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Titel
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Beschreibung
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Fälligkeitsdatum
        </dt>
        <dd class="col-sm-10">
            @Model.DueDate?.ToString("dd.MM.yyyy")
        </dd>
        <dt class="col-sm-2">
            Erledigt
        </dt>
        <dd class="col-sm-10">
            @Model.IsCompleted ? "Ja" : "Nein"
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Löschen" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Abbrechen</a>
    </form>
</div>
